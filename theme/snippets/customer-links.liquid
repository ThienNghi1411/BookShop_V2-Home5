{% if shop.customer_accounts_enabled %}
  <div class="customer-link d-none d-lg-block">

    {% if customer %}
      <a href="{{ routes.account_url }}" title="{{ 'general.header.my_account' | t }}">
        <span>{{ 'general.header.my_account' | t }}</span>
      </a>
    
      <span class="or">/</span>    
    
      <a href="{{ routes.account_logout_url }}" title="{{ 'general.header.logout' | t }}">
        <span>{{ 'general.header.logout' | t }}</span>
      </a>

    {% else %}
      <a href="{{ routes.account_login_url }}" title="{{ 'general.header.login' | t }}">
        <span>{{ 'general.header.login' | t }}</span>
      </a>
    
      <span class="or">/</span> 
    
      <a href="{{ routes.account_register_url }}" title="{{ 'general.header.register' | t }}">
        <span>{{ 'general.header.register' | t }}</span>
      </a>
    
    {% endif %}

  </div>
{% endif %}

